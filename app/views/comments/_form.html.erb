<%= form_with model:@comment, local: :true do |f| %>
<%= f.hidden_field :recipe_id, value: "#{params[:recipe_id]}" %>
<%= f.label :rating %>
<%= f.number_field :rating %><br>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :body %>
<%= f.text_area :body %><br>
<%= f.submit %>
<% end %>
