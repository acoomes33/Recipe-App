<h1><%= @user.full_name %>'s Profile</h1>
<h2>Recipes: </h2>
<ul>
<% @user.recipes.each do |recipe| %>
<li><%= link_to recipe.name, recipe_path(recipe) %><br>
    <%= recipe.description %>
</li>
<% end %>
</ul>

<h2>Reviews: </h2>
<ul>
<% @user.comments.each do |comment| %>
<li><%= link_to comment.title, comment_path(comment) %><br>
    <%= comment.body %>
</li>
<% end %>
</ul>

