<h1><%= full_name(@user) %>'s Profile</h1>
<%= link_to "Edit User", edit_user_path(@user)%>
<h2>Recipes: </h2>
<ul>
<% @user.recipes.each do |recipe| %>
<li><%= link_to recipe.name, recipe_path(recipe) %><br>
    <%= recipe.description %>
</li><br>
<% end %>
</ul>

<h2>Reviews: </h2>
<ul>
<% @user.comments.each do |comment| %>
<li><%= link_to comment.title, comment_path(comment) %><br>
    <strong><%= comment.rating %> Stars</strong><br><br>
    <%= comment.body %><br><br>
    Reviewed Recipe: <%= link_to recipe_name(comment), recipe_path(comment.recipe) %>
</li><br>
<% end %>
</ul>

